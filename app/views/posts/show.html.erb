<div style="width: 100%; height: 300px; overflow-y: hidden">
  <%= image_tag(@post.thumbnail, style:'width: 100%') %>
</div>
<div class="container" style="margin-top: 2em">
  <div class="row">
    <div class="jumbotron" style="width: 100%">
      <h1 class="display-4">
        <%= link_to @post.title, root_path %>
      </h1>
      <p class="lead">
        <%= @post.updated_at.strftime("%A, %B %e, %Y") %> by <%= @post.user.username %> | <%= pluralize(@post.views, "View") %>
      </p>
      <hr class="my-4" />
      <div class="post_body">
        <%= @post.body %>
      </div>
      <%= link_to "Edit", edit_post_path, class: "edit" %>
      <%= link_to "Delete", post_path, method: :delete, data: {confirm: "ÃŠtes vous certain?"}, class: "delete" %>
      <%= link_to 'Back', posts_path %>
    </div>
  </div>
</div>
